{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "packages",
	"projects": {
		"rxjs": {
			"root": "packages/rxjs",
			"sourceRoot": "packages/rxjs/src",
			"projectType": "library",
			"prefix": "op10",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-ng-packagr:build",
					"options": {
						"tsConfig": "packages/rxjs/tsconfig.lib.json",
						"project": "packages/rxjs/ng-package.json"
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "packages/rxjs/src/test.ts",
						"tsConfig": "packages/rxjs/tsconfig.spec.json",
						"karmaConfig": "packages/rxjs/karma.conf.js"
					}
				},
				"lint": {
					"builder": "@angular-devkit/build-angular:tslint",
					"options": {
						"tsConfig": [
							"packages/rxjs/tsconfig.lib.json",
							"packages/rxjs/tsconfig.spec.json"
						],
						"exclude": ["**/node_modules/**"]
					}
				}
			}
		}
	}
}
